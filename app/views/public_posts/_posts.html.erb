<% @posts.each do |post| %>
    <h2><strong><%= post.title %></strong><small> / <%= post.categories.collect { |c| c.name } %></small></h2>
    <small><%= post.created_at.to_formatted_s(:long) %> by <strong><%= post.user.email %></strong></small>
    <hr>
    <div>
      <%= post.content.length > 400 ? post.content.truncate(400) : post.content %>
    </div>

    <%= link_to "-More-", posts_show_path(post.id), class: 'btn btn-success' %>
<% end %>
