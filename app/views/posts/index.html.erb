<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td style="text-align:justify;"><div class="ocultar"><small><%= post.content %></small></div></td>
        <td><%= post.status %></td>
        <td><%= post.url %></td>
        <td><%= link_to 'Show', posts_show_path(post.id), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_post_path(post.id), class: 'btn btn-warning'  %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },  class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
